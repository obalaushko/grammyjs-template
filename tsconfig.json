{
	"compilerOptions": {
	  "target": "ES2022",
	  "rootDir": ".",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "paths": {
		"#root/*": [
		  "./src/*"
		]
	  },
	  "strict": true,
	  "noEmit": true,
	  "outDir": "dist",
	  "sourceMap": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "preserveWatchOutput": true
	},
	"include": [
	  "src/**/*"
	]
  }
