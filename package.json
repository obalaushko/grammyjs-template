{
  "name": "grammyjs-template",
  "version": "1.0.0",
  "description": "This repository provides a template for creating Telegram bots using the [grammY](https://grammy.dev/) framework with Deno. It includes support for MongoDB Atlas, Docker, and a basic CI/CD pipeline for building and pushing Docker images to Docker Hub.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "tsc && tsx ./src/main.ts",
    "start:force": "tsx ./src/main.ts",
    "dev": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
    "build": "tsc --noEmit false"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.5.4",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.2",
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/files": "^1.1.1",
    "@grammyjs/hydrate": "^1.4.1",
    "@grammyjs/menu": "^1.2.2",
    "@grammyjs/parse-mode": "^1.10.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-free": "^2.4.2",
    "@grammyjs/storage-mongodb": "^2.4.2",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "grammy": "^1.30.0",
    "mongoose": "^8.6.1",
    "tsx": "^4.19.0",
    "winston": "^3.14.2",
    "winston-transport": "^4.7.1"
  }
}
